<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/home_hotpoint_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="149dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_90x90" />

                <TextView
                    android:id="@+id/tv_hofilmsh_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="限时抢购"
                    android:textColor="#f47070" />

                <TextView
                    android:id="@+id/tv_hofilmsh_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hofilmsh_0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="蚁人抽绳包"
                    android:textColor="#55000000"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="1dp"
                    android:background="#22000000" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_default_300x200" />

                    <TextView
                        android:id="@+id/tv_hofilmsh_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="时尚配饰"
                        android:textColor="#2c8dce" />

                    <TextView
                        android:id="@+id/tv_hofilmsh_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_hofilmsh_1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="新奇浪漫超萌饰品"
                        android:textColor="#55000000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#22000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_default_300x200" />

                        <TextView
                            android:id="@+id/tv_hofilmsh_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="主推商品"
                            android:textColor="#ffa643" />

                        <TextView
                            android:id="@+id/tv_hofilmsh_21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_hofilmsh_2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:text="潮趣充电盛宴"
                            android:textColor="#55000000"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#22000000" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_default_300x200" />

                        <TextView
                            android:id="@+id/tv_hofilmsh_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="人气热销"
                            android:textColor="#f47070" />

                        <TextView
                            android:id="@+id/tv_hofilmsh_31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_hofilmsh_3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:text="超萌手机壳"
                            android:textColor="#55000000"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="149dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_300x200" />

                <TextView
                    android:id="@+id/tv_hofilmsh_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="限时抢购"
                    android:textColor="#2c8dce" />

                <TextView
                    android:id="@+id/tv_hofilmsh_41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hofilmsh_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="超人系列石英表"
                    android:textColor="#55000000"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#22000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_300x200" />

                <TextView
                    android:id="@+id/tv_hofilmsh_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="原创设计"
                    android:textColor="#ff9290" />

                <TextView
                    android:id="@+id/tv_hofilmsh_51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hofilmsh_5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="炫酷出行新风尚"
                    android:textColor="#55000000"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>