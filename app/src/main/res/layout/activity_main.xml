<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            android:drawableTop="@drawable/rb_home_selector"
            style="@style/BtnTheme"
            />
        <RadioButton
            android:id="@+id/rb_BuyTicket"
            android:text="首页"
            android:drawableTop="@drawable/rb_buyticket_selector"
            style="@style/BtnTheme"
            />
        <RadioButton
            android:id="@+id/rb_store"
            android:text="首页"
            android:drawableTop="@drawable/rb_store_selector"
            style="@style/BtnTheme"
            />
        <RadioButton
            android:id="@+id/rb_discover"
            android:text="首页"
            android:drawableTop="@drawable/rb_discover_selector"
            style="@style/BtnTheme"
            />
        <RadioButton
            android:id="@+id/rb_user"
            android:text="首页"
            android:drawableTop="@drawable/rb_user_selector"
            style="@style/BtnTheme"
            />
    </RadioGroup>
</LinearLayout>
